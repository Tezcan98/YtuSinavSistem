<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context=".KayitEkrani">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="123dp"
            android:layout_height="30dp"
            android:text="Kullanıcı Adı"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/r_emailinput"
            android:layout_width="wrap_content"

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint="Please Input E-mail"

            android:inputType="textEmailAddress"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="123dp"
            android:layout_height="30dp"
            android:text="İsim Soyisim"

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nameinput"
            android:layout_width="wrap_content"

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint="Please Input Name"

            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <TextView

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_width="74dp"
            android:layout_height="27dp"
            android:text="Sifre"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/r_passinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="20sp" />
        <TextView

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:layout_width="124dp"
            android:layout_height="27dp"
            android:text="Sifre Tekrar"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/r_passinput2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="20sp" />


